<h1 class="page-title">Список пользователей</h1>

<div class="table-container back-no">
  <table class="user-table">
    <thead>
    <tr>
      <th>Имя пользователя</th>
      <th>Аватар</th>
    </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user_path(user), class: "username-link" %></td>
        <td>
          <% if user.avatar.attached? %>
            <%= image_tag user.avatar, class: "user-avatar" %>
          <% else %>
            <%= image_tag 'default_avatar.png', class: "user-avatar", alt: "Avatar пользователя" %>
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
