<h1>Редактировать пользователя</h1>

<%= form_with(model: @user, local: true) do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "ошибка") %> предотвращает сохранение:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :username %>
    <%= form.text_field :username %>
  </div>

  <div class="field">
    <%= form.label :password_hash, "Пароль" %>
    <%= form.password_field :password_hash %>
  </div>

  <div class="field">
    <%= form.label :avatar %>
    <%= form.file_field :avatar %>
    <% if @user.avatar.attached? %>
      <div>
        <strong>Текущий аватар:</strong>
        <%= image_tag @user.avatar %>
      </div>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit "Обновить пользователя" %>
  </div>
<% end %>

<%= link_to 'Назад', users_path %>
