<h1>Вход в систему</h1>

<%= form_with(url: login_path, local: true) do %>
  <div class="form-field">
    <%= label_tag :username, "Имя пользователя" %>
    <%= text_field_tag :username %>
  </div>

  <div class="form-field">
    <%= label_tag :password_hash, "Пароль" %>
    <%= password_field_tag :password_hash %>
  </div>

  <div class="actions">
    <%= submit_tag "Войти", class: 'button' %>
  </div>
<% end %>

<p>
  <%= link_to 'Регистрация', signup_path %>
</p>
