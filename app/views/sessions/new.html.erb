<div class="container back-no">
  <h1 class="page-title">Вход в систему</h1>

  <% if @error_message %>
    <div class="error-message">
      <%= @error_message %>
    </div>
  <% end %>

  <%= form_with(url: login_path, local: true, class: 'user-form') do %>
    <div class="form-field">
      <%= label_tag :username, "Имя пользователя", class: 'field-label' %>
      <%= text_field_tag :username, nil, class: 'field-input' %>
    </div>

    <div class="form-field">
      <%= label_tag :password_hash, "Пароль", class: 'field-label' %>
      <%= password_field_tag :password_hash, nil, class: 'field-input' %>
    </div>

    <div class="actions">
      <%= submit_tag "Войти", class: 'btn' %>
    </div>
  <% end %>
</div>
