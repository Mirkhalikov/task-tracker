<div class="container">
  <header>
    <h1 class="page-title">Редактировать задачу</h1>
  </header>

  <%= form_with(model: @task, local: true, html: { class: "task-form" }) do |form| %>
    <% if @task.errors.any? %>
      <div class="error-message">
        <h2><%= pluralize(@task.errors.count, "ошибка") %> предотвращает сохранение:</h2>
        <ul>
          <% @task.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-field">
      <%= form.label :title, class: "field-label" %>
      <%= form.text_field :title, class: "field-input" %>
    </div>

    <div class="form-field">
      <%= form.label :description, class: "field-label" %>
      <%= form.text_area :description, class: "field-input" %>
    </div>

    <div class="form-field">
      <%= form.label :status, class: "field-label" %>
      <%= form.select :status, ['Бэклог', 'В фокусе', 'В процессе', 'QA', 'Завершено'], { class: "field-input" } %>
    </div>

    <div class="form-field">
      <%= form.label :categories, class: "field-label" %>
      <%= form.collection_check_boxes :category_ids, Category.all, :id, :name do |b| %>
        <div class="category-check">
          <%= b.check_box %>
          <%= b.label %>
        </div>
      <% end %>
    </div>

    <div class="actions">
      <%= form.submit "Обновить задачу", class: 'btn btn-update' %>
    </div>
  <% end %>

  <%= link_to "Назад", request.referer && URI(request.referer).path != request.fullpath ? URI(request.referer).path : task_path(@task), class: 'btn btn-back' %>
</div>
