<h1>Список задач</h1>

<%= link_to 'Создать новую задачу', new_task_path %>

<table>
  <thead>
  <tr>
    <th>Название</th>
    <th>Статус</th>
    <th colspan="3">Действия</th>
  </tr>
  </thead>
  <tbody>
  <% @tasks.each do |task| %>
    <tr>
      <td><%= link_to task.title, task_path(task) %></td>
      <td><%= task.status %></td>
      <td><%= link_to 'Редактировать', edit_task_path(task) %></td>
      <td><%= link_to 'Удалить', task_path(task), method: :delete, data: { confirm: 'Вы уверены?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>
