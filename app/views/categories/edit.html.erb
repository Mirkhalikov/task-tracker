<div class="container">
  <header>
    <h1 class="page-title">Редактирование категории</h1>
  </header>

  <%= form_with model: @category, local: true, html: { class: "category-form" } do |form| %>
    <% if @category.errors.any? %>
      <div class="error-message">
        <h2><%= pluralize(@category.errors.count, "ошибка") %> предотвращает сохранение категории:</h2>
        <ul>
          <% @category.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-field">
      <%= form.label :name, class: "field-label" %>
      <%= form.text_field :name, class: "field-input" %>
    </div>

    <div class="actions">
      <%= form.submit "Обновить категорию", class: 'btn btn-create' %>
    </div>
  <% end %>

  <%= link_to "Назад", request.referer && URI(request.referer).path != request.fullpath ? URI(request.referer).path : categories_path, class: 'btn btn-back' %>
</div>
